<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= myPageTitle %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <nav>
            <a href="/">THE DESIGN SHOP</a>
            <a href="/">Weekly Recommandations</a>
            <a href="/cheap">Less than 30$</a>
            <a href="/addItem">Add</a>
        </nav>
        <h1>ADD A NEW PRODUKT</h1>
    </header>
    <main>
        <section id="addItem">
            <form action="/addItem" method="POST">
                <input type="text" name='ProductName' placeholder="Product Name" required>
                <input type="url" name='ProductLink' placeholder="URL Picture for Article" required>
                <input type="text" name='Company' placeholder="Company" required>
                <input type="number" name='Price' placeholder="Price" required>
                <input type="message" name='LinkShop' placeholder="Shop Link" required>
                <input type="submit" value="SEND ARTICLE">
            </form>
            <div class="line">
                <div class='eye1'></div>
                <div class='eye2'></div>
            </div>
        </section>
        <section id="random">
            <h1>RANDOM PRODUCTS</h1>
            <% dataFound.forEach(obj=> { %>
                <article>
                    <figure>
                        <a href='/index/<%=obj._id%>'><img src=<%=obj.ProductLink%> alt="img"></a>
                        <figcaption>
                            <p>
                                <%=obj.ProductName%>
                            </p>
                            <p>
                                <%=obj.Company%>
                            </p>
                            <p>
                                <%=obj.Price%>$
                            </p>
                        </figcaption>
                    </figure>
                </article>
                <% }) %>
        </section>
    </main>
    <main>

    </main>

</body>

</html>